<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.plantcaresystem.controllers.PlantController"
            prefWidth="800.0" prefHeight="600.0">
            <top>
        <HBox spacing="10" style="-fx-padding: 10;" styleClass="top-panel">
            <Button text="â¬… Back" onAction="#goBack" styleClass="button, small"/>
            <Label text="MANAGEMENT TANAMAN"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region>
                <HBox.hgrow>
                    <javafx.scene.layout.Priority fx:value="ALWAYS"/>
                </HBox.hgrow>
            </Region>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" alignment="CENTER" style="-fx-padding: 10;">
            <HBox spacing="10">
                <TextField fx:id="nameField" promptText="Nama Tanaman" />
                <TextField fx:id="ageField" promptText="Usia (minggu)" />
                <TextField fx:id="userIdField" promptText="Owner User ID" />
                <Button text="Add" onAction="#addPlant"/>
                <Button text="Update" onAction="#updatePlant"/>
            </HBox>

            <ListView fx:id="listPlants" prefHeight="350" prefWidth="500"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Lihat Pertumbuhan" onAction="#viewGrowth" style="-fx-text-fill: white; -fx-background-color: #4CAF50;"/>
                <Button text="Riwayat Perawatan" onAction="#viewLogs" style="-fx-text-fill: white; -fx-background-color: #FF9800;"/>
                <Button text="Atur Jadwal" onAction="#manageSchedule" style="-fx-text-fill: white; -fx-background-color: #2196F3;"/>
                <Button text="Hapus" onAction="#deleteSelected" style="-fx-text-fill: white; -fx-background-color: #F44336;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
