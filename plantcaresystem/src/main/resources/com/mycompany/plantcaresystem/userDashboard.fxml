<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.plantcaresystem.controllers.UserDashboardController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="USER DASHBOARD" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region>
                <HBox.hgrow>
                    <javafx.scene.layout.Priority fx:value="ALWAYS"/>
                </HBox.hgrow>
            </Region>
            <Button text="Logout" onAction="#logout"/>
        </HBox>
    </top> 

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Label text="Tanaman Anda:" style="-fx-font-size: 14px;"/>
            <ListView fx:id="userPlantList" prefHeight="250" prefWidth="300"/>
        </VBox>
    </center>

</BorderPane>
